{
  "name": "react-shadow",
  "version": "16.3.1",
  "description": "Utilise Shadow DOM in React with all the benefits of style encapsulation.",
  "main": "cjs/react-shadow.js",
  "module": "es/react-shadow.js",
  "jsnext:main": "es/react-shadow.js",
  "scripts": {
    "start": "babel example/server/default.js | node",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src --out-dir cjs",
    "build:es": "cross-env BABEL_ENV=es babel src --out-dir es",
    "build:umd": "cross-env BABEL_ENV=es NODE_ENV=development rollup -c -i src/react-shadow.js -o dist/react-shadow.js",
    "build:umd:min": "cross-env BABEL_ENV=es NODE_ENV=production rollup -c -i src/react-shadow.js -o dist/react-shadow.min.js",
    "build": "npm run build:commonjs && npm run build:es && npm run build:umd && npm run build:umd:min",
    "clean": "rimraf dist es cjs",
    "test": "npm run spec && npm run lint",
    "spec": "nyc ava && npm run report",
    "lint": "xo src/*",
    "report": "nyc report --reporter=html"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Wildhoney/ReactShadow.git"
  },
  "keywords": [
    "react shadow dom",
    "react shadow boundary",
    "react template",
    "react webcomponents",
    "react web components",
    "react encapsulation"
  ],
  "author": "Adam Timberlake <adam.timberlake@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Wildhoney/ReactShadow/issues"
  },
  "homepage": "https://github.com/Wildhoney/ReactShadow",
  "peerDependencies": {
    "react": ">=0.14.7 <=16.x",
    "react-dom": ">=0.14.7 <=16.x"
  },
  "devDependencies": {
    "ava": "~0.23.0",
    "axios": "^0.14.0",
    "axios-mock-adapter": "^1.6.1",
    "babel-cli": "^6.14.0",
    "babel-core": "^6.14.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-ramda": "1.6.3",
    "babel-polyfill": "~6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.14.0",
    "browser-env": "~3.2.1",
    "capitalize": "^1.0.0",
    "coveralls": "~2.13.0",
    "cross-env": "5.1.0",
    "delay": "~2.0.0",
    "document-ready-promise": "^3.0.1",
    "enzyme": "~3.2.0",
    "enzyme-adapter-react-16": "~1.1.0",
    "eslint-config-xo-react": "^0.9.0",
    "eslint-plugin-react": "^6.2.0",
    "eslint-plugin-xo": "^0.5.1",
    "express": "^4.11.2",
    "humps": "~2.0.0",
    "jasmine-core": "^2.2.0",
    "jsdom": "~11.3.0",
    "nyc": "~10.2.0",
    "prop-types": "~15.6.0",
    "ramda": "^0.22.1",
    "react": "~16.1.0",
    "react-addons-test-utils": "~15.6.0",
    "react-document-title": "~2.0.3",
    "react-dom": "~16.1.0",
    "react-redux": "~5.0.3",
    "react-router": "~4.2.0",
    "react-router-dom": "~4.1.2",
    "react-thunk": "~1.0.0",
    "redux": "~3.6.0",
    "redux-thunk": "~2.2.0",
    "rimraf": "2.6.2",
    "rollup": "0.50.0",
    "rollup-plugin-babel": "3.0.2",
    "rollup-plugin-commonjs": "8.2.6",
    "rollup-plugin-json": "3.0.0",
    "rollup-plugin-node-resolve": "3.0.0",
    "rollup-plugin-replace": "2.0.0",
    "rollup-plugin-uglify": "2.0.1",
    "sinon": "^1.17.5",
    "uglify-es": "3.3.9",
    "webcomponents.js": "~0.7.24",
    "xo": "^0.16.0"
  },
  "ava": {
    "files": [
      "tests/*.test.js"
    ],
    "babel": "inherit",
    "require": [
      "babel-register",
      "babel-polyfill",
      "./tests/helpers/browser-env.js",
      "./tests/helpers/enzyme.js"
    ]
  },
  "xo": {
    "space": 4,
    "esnext": true,
    "globals": [
      "window",
      "document"
    ],
    "extends": "xo-react",
    "rules": {
      "padded-blocks": "off",
      "max-lines": [
        2,
        500
      ],
      "babel/object-curly-spacing": [
        2,
        "always"
      ],
      "babel/array-bracket-spacing": "off",
      "no-unused-vars": [
        1
      ],
      "max-nested-callbacks": [
        1,
        5
      ],
      "key-spacing": "off",
      "default-case": "off",
      "no-multi-spaces": "off",
      "no-unused-expressions": "off",
      "no-case-declarations": "off",
      "import/no-named-as-default": "off",
      "react/jsx-indent": "off",
      "react/jsx-space-before-closing": "off",
      "react/no-danger": "off",
      "react/jsx-no-bind": "off",
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ]
    }
  },
  "dependencies": {}
}
